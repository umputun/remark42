{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "app" ,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["app/typings", "app/**/*.tsx", "app/**/*.ts"],
  "exclude": ["node_modules"]
}
